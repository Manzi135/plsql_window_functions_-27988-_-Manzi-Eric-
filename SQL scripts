CREATE TABLE Products (
    product_id INT PRIMARY KEY,
    product_name VARCHAR(120) NOT NULL,
    category VARCHAR(60) NOT NULL,
    price DECIMAL(10,2) NOT NULL
);
INSERT INTO Products (product_id, product_name, category, price)
VALUES
(101, 'Red T-Shirt', 'Clothing', 19.99),
(102, 'Blue Jeans', 'Clothing', 49.99),
(103, 'Sneakers', 'Footwear', 79.99),
(104, 'Leather Belt', 'Accessories', 24.99),
(105, 'Black Hoodie', 'Clothing', 39.99);

CREATE TABLE Orders (
    order_id INT PRIMARY KEY,
    customer_id INT NOT NULL,
    order_date DATE NOT NULL,
    region VARCHAR(50) NOT NULL,
    
    FOREIGN KEY (customer_id) REFERENCES Customers(customer_id)
);
INSERT INTO Orders (order_id, customer_id, order_date, region)
VALUES
(1001, 1, '2025-06-01', 'karuruma'),
(1002, 2, '2025-06-03', 'kimihurura'),
(1003, 1, '2025-06-15', 'komironko'),
(1004, 3, '2025-07-01', 'remera'),
(1005, 4, '2025-07-05', 'kabeza');
CREATE TABLE Order_Items (
    item_id INT PRIMARY KEY,
    order_id INT NOT NULL,
    product_id INT NOT NULL,
    quantity INT NOT NULL,
    unit_price DECIMAL(10,2) NOT NULL,
    
    FOREIGN KEY (order_id) REFERENCES Orders(order_id),
    FOREIGN KEY (product_id) REFERENCES Products(product_id)
);
